<div class="max-w-4xl mx-auto px-4 py-8">
  <h1 class="text-4xl font-bold mb-8">My Blog</h1>
  
  <div class="space-y-8">
    <% @posts.each do |post| %>
      <article class="border-b border-gray-200 pb-8">
        <h2 class="text-2xl font-semibold mb-2">
          <%= link_to post[:title], blog_post_path(post[:slug]), class: "text-blue-600 hover:text-blue-800" %>
        </h2>
        <div class="text-gray-600 mb-4">
          <time><%= post[:date] %></time>
        </div>
        <p class="text-gray-700 mb-4">
          <%= post[:preview] %>
          <%= link_to "Read more â†’", blog_post_path(post[:slug]), class: "text-blue-600 hover:text-blue-800 inline-flex items-center" %>
        </p>
      </article>
    <% end %>
  </div>
</div>
